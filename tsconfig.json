{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@grpc-server/*": ["logpilot-grpc-server/src/*"],
      "@rest-server/*": ["logpilot-rest-server/src/*"],
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["logpilot-*/src", "shared/**/*", "start-server.ts"]
}
