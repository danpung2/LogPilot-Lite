    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["logpilot-*/src", "shared/**/*"]
}
