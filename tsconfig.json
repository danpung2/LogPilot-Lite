{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@grpc-server/*": ["logpilot-grpc-server/src/*"],
      "@rest-server/*": ["logpilot-rest-server/src/*"]
    },
    "outDir": "./dist/cjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["logpilot-*/src", "shared/**/*", "start-server.ts"]
}
